<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.rapla</groupId>
	<artifactId>rapla</artifactId>
	<version>2.0-SNAPSHOT</version>
	<url>https://github.com/rapla/rapla</url>
	<description>rapla - resource scheduling and event planing</description>
	<name>rapla - resource scheduling and event planing</name>
	<inceptionYear>2000</inceptionYear>
	<licenses>
		<license>
			<name>GNU GPL v3</name>
		</license>
	</licenses>
	<organization>
		<name>Rapla</name>
		<url>http://rapla.org</url>
	</organization>
	<packaging>war</packaging>
	<scm>
		<connection>scm:git:git://github.com/rapla/rapla.git</connection>
		<url>https://github.com/rapla/rapla.git</url>
	</scm>

	<properties>
		<slf4j.version>1.7.12</slf4j.version>
		<logback.version>1.1.3</logback.version>
		<!-- <jetty.version>9.3.0.v20150612</jetty.version> -->
		<jetty.version>8.1.17.v20150415</jetty.version>
		<gwt.version>2.7.0</gwt.version>
		<gwt.plugin.version>2.7.0</gwt.plugin.version>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<gson.version>2.3.1</gson.version>
		<itext.version>4.2.1</itext.version>
		<javax.inject.version>1</javax.inject.version>
		<supercsv.version>2.0.1</supercsv.version>
		<webapp.dir>${project.build.directory}/${project.build.finalName}</webapp.dir>
		<!-- Properties to sign the client jars -->
        <!-- Text Properties -->
		<maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
		<doc.date>${maven.build.timestamp}</doc.date>
		<doc.buildtime>${maven.build.timestamp} GMT+0 </doc.buildtime>
	</properties>

	<build>
		<sourceDirectory>${basedir}/src</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src-resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.txt</include>
					<include>**/*.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>${basedir}/src-resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/*.xml</exclude>
					<exclude>**/*.txt</exclude>
					<exclude>**/*.properties</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>${basedir}/gwt-src</directory>
				<excludes>
					<exclude>jre</exclude>
				</excludes>
			</resource>
		</resources>
		<testSourceDirectory>${basedir}/test-src</testSourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<!-- <compilerId>eclipse</compilerId> -->
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
				</configuration>
				<dependencies>
					<!-- <dependency> -->
					<!-- <groupId>org.codehaus.plexus</groupId> -->
					<!-- <artifactId>plexus-compiler-eclipse</artifactId> -->
					<!-- <version>2.5</version> -->
					<!-- </dependency> -->
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>gwt-maven-plugin</artifactId>
				<version>${gwt.plugin.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<runTarget>Rapla.html</runTarget>
					<module>org.rapla.gwt.Rapla</module>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<archiveClasses>true</archiveClasses>
					<warSourceExcludes>Rapla/Rapla.nocache.js</warSourceExcludes>
					<packagingExcludes>**/*.java</packagingExcludes>
					<warSourceDirectory>${basedir}/war</warSourceDirectory>
					<webXml>${basedir}/war/WEB-INF/web.xml</webXml>
				</configuration>
			</plugin>

			


			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<id>PluginList</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>org.rapla.framework.ServiceListCreator</mainClass>
							<arguments>
								<argument>${project.build.directory}/classes</argument>
								<argument>${project.build.directory}/classes/META-INF/rapla-plugin.list</argument>
							</arguments>
						</configuration>
					</execution>
					<!-- <execution> <id>Properties</id> <phase>prepare-package</phase> 
						<goals> <goal>java</goal> </goals> <configuration> <mainClass>org.rapla.components.xmlbundle.impl.ResourceFileGenerator</mainClass> 
						<arguments> <argument>${basedir}/src-resources</argument> <argument>${project.build.directory}/unfiltered-resources</argument> 
						</arguments> </configuration> </execution> -->
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<outputDirectory>${webapp.dir}/webclient</outputDirectory>
					<finalName>raplaclient</finalName>
					<excludes>
						<exclude>**/*.gwt.xml</exclude>
						<exclude>**/*Resources.xml</exclude>
						<exclude>org/rapla/gwt/**</exclude>
						<exclude>org/rapla/bootstrap/*</exclude>
						<exclude>**/Slf4jAdapter**</exclude>
						<exclude>**/server/**</exclude>
						<exclude>**/server/**</exclude>
						<exclude>**/storage/xml/**</exclude>
						<exclude>**/storage/dbfile/**</exclude>
						<exclude>**/storage/dbsql/**</exclude>
						<exclude>**/servletpages/**</exclude>
						<exclude>se/**</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.google.code.gson</groupId>
									<artifactId>gson</artifactId>
									<version>${gson.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/${project.build.finalName}/webclient</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.lowagie</groupId>
									<artifactId>itext</artifactId>
									<version>${itext.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/${project.build.finalName}/webclient</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>javax.inject</groupId>
									<artifactId>javax.inject</artifactId>
									<version>${javax.inject.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/${project.build.finalName}/webclient</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>net.sf.supercsv</groupId>
									<artifactId>super-csv</artifactId>
									<version>${supercsv.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/${project.build.finalName}/webclient</outputDirectory>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/wars</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
				 	<execution>
				 	    <id>loadbuildproperties</id>
						<phase>validate</phase>
						<configuration>
						    <exportAntProperties>true</exportAntProperties>
							<tasks>
							    <echo>in validate phase (1 of 21)</echo>
							    <available file="${basedir}/${build.properties}" property="build.properties.present" />
    	          
						    	<copy todir="${basedir}">
						            <fileset dir="${basedir}">
						                <include name="build.properties.template" unless="build.properties.present" />
						            </fileset>
						            <mapper type="glob" from="*.template" to="*" />
						        </copy>
							    <property file="${basedir}/build.properties"/>
                                <property file="${basedir}/doc.properties"/>
                                <property name="doc.version">${project.version}</property>
                                <property name="keystore.file" value="${basedir}/raplaselfsigned.ks" />
       	                        <property name="keystore.password" value="raplaselfsigned" />
                                <property name="keystore.keypass" value="${keystore.password}" />
                                <property name="keystore.alias" value="rapla" />
                                <property name="doc.name" value="rapla"/>
								<property name="doc.revision" value=""/>
		                        <property name="doc.year" value="2000-2015"/>
		                        <property name="doc.copyright" value="Rapla Team"/>
		                        <property name="doc.developer-list-link" value="http://lists.sourceforge.net/lists/listinfo/rapla-developers"/>
		                        <property name="doc.developer-list" value="rapla-developers@lists.sourceforge.net"/>
		                        <property name="doc.homepage" value="http://rapla.org"/>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				 	<execution>
				 	    <id>generateclientlibsproperties</id>
						<phase>prepare-package</phase>
						<configuration>
							<tasks>
								<path id="dist.contents">
									<fileset dir="${webapp.dir}/webclient">
										<include name="*.jar" />
									</fileset>
								</path>
								<path id="dist.contents.dir">
									<dirset dir="${webapp.dir}/webclient">
									</dirset>
								</path>
								<property name="prop.dist.contents" refid="dist.contents" />
								<property name="prop.dist.contents.dir" refid="dist.contents.dir" />
								<echo file="${webapp.dir}/WEB-INF/classes/clientlibs.properties">${prop.dist.contents}</echo>
								<replace file="${webapp.dir}/WEB-INF/classes/clientlibs.properties"
									token="${prop.dist.contents.dir}${file.separator}" value=""
									preserveLastModified="true" />
								<replace file="${webapp.dir}/WEB-INF/classes/clientlibs.properties"
									token="${path.separator}" value=";" preserveLastModified="true" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<alias>${keystore.alias}</alias>
					<keystore>${keystore.file}</keystore>
					<keypass>${keystore.keypass}</keypass>
					<storepass>${keystore.password}</storepass>
					<archiveDirectory>${project.build.directory}/${project.build.finalName}/webclient</archiveDirectory>
					<includes>
						<include>*.jar</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
